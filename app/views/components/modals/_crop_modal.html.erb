<script id="cropModal.html" type="text/ng-template">
  <div class="modal-header">
    <button class="close" ng-click="close()" type="button">Ã—</button>
    <h4>
      <%= t('modals.photo_preview.title') %>
    </h4>
  </div>
  <div class="modal-body image-crop-area">
    <img-crop image="image" result-image="resultImage"
              area-type="{{ areaType }}"
              result-image-size="resultImageSize"
              area-min-size="areaMinSize">
    </img-crop>
  </div>
  <div class="modal-footer">
    <span class="btn btn-default pull-left" ng-click="close()">
      <%= t('modals.photo_preview.cancel') %>
    </span>
    <span class="btn btn-primary pull-right" id="upload_photo_button" ng-click="confirm()">
      <%= t('modals.photo_preview.upload') %>
    </span>
  </div>
</script>
