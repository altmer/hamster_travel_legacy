<script id="tripTypeahead.html" type="text/ng-template">
  <a class="trip-typeahead">
    <img ng-src="{{match.model.image_url}}" class="trip-image"/>
    <div>
      {{match.model.name}} <br/>
      <span class="flags">
        <span ng-bind-html="country" ng-repeat="country in match.model.countries">
        </span>
      </span>
    </div>
  </a>
</script>

<script id="globalSearch.html" type="text/ng-template">
  <span ng-click="showSearch()" id="global_search_field">
    <%= inline_svg 'buttons/search.svg' %>
  </span>
  <input type="text"
         id="global_search"
         placeholder="<%= t('layouts.partials.navbar.search') %>"
         uib-typeahead="item.name as item.text for item in getTrips($viewValue)"
         ng-model="search_term"
         typeahead-on-select="onSelect($item, $model)"
         typeahead-min-length="1"
         typeahead-wait-ms="500"
         typeahead-template-url="tripTypeahead.html"
         ng-class="{'mobile-search' : showMobileSearch}"
         focus-on="showMobileSearch"
  />
  <a href="#0"
     class="search-cancel"
     ng-class="{'search-cancel-shown' : showMobileSearch}"
     ng-click="hideSearch()"
  >
    <%= image_tag 'buttons/delete.svg' %>
  </a>
</script>
