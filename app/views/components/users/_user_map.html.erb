<script id="userMap.html" type="text/ng-template">
  <div class="user-profile">
    <div class="user-map-container" ng-if="loaded">
      <div class="container user-map-header">
        <h3><%= t('users.show.user_map') %></h3>
        <% if @edit %>
          <manual-cities user-id="$ctrl.userId"></manual-cities>
        <% end %>
      </div>

      <div id="user_mapbox_container">
      </div>

      <div class="container user-map-header" ng-if="visited_countries.length > 0">
        <h3><%= t('users.show.visited_countries') %></h3>
      </div>

      <div class="container">
        <div class="row">
          <div class="col-lg-3 col-md-4 col-xs-6 visited-place"
               ng-repeat="country in visited_countries track by country.iso3_code">
            <span ng-bind-html="country.flag_image"></span>
            {{country.name}}
          </div>
        </div>
      </div>
    </div>
  </div>
</script>
