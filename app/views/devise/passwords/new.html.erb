<%= content_for :title, t('.title') %>

<div class="container">
  <div class="row login-form">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), role: 'formr') do |f| %>
          <fieldset>
            <h5><%= t('.welcome') %></h5>
            <div class="form-group">
              <%= f.email_field :email, autofocus: true, class: 'form-control input-lg', placeholder: t('.email') %>
            </div>
            <div class="form-group">
              <%= f.submit t('.send'), class: 'btn btn-lg btn-success btn-block' %>
            </div>
          </fieldset>
      <% end %>
    </div>
  </div>
</div>
