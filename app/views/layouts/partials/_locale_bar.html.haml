%li{class: 'dropdown'}
  %a{href: '#', class: 'dropdown-toggle', 'data-toggle' => 'dropdown'}
    = flag I18n.locale == :ru ? 'ru' : 'gb'
  %ul{class: 'dropdown-menu'}
    %li.flag-text
      = link_to locale: 'ru' do
        = flag 'ru'
        Русский
    %li.flag-text
      = link_to locale: 'en' do
        = flag 'gb'
        English
