<% content_for :title, t('.title') %>
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h4>
        <%= t('.title') %>
      </h4>
    </div>
  </div>
  <% if @trips.blank? %>
      <%= render 'no_trips', text: t('widgets.trips.grid.no_trips') %>
  <% else %>
      <%= render 'trips/partials/trip_list', trips: @trips %>
  <% end %>
</div>
