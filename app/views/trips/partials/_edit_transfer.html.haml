%p.edit-actions
  %span{'ng-click' => 'transfer.isCollapsed = !transfer.isCollapsed', class: 'collapse-header'}
    = t('trips.show.transfer')
    {{$index+1}}
  %a{href: 'javascript:void(0);', 'ng-click' => 'transfer.isCollapsed = !transfer.isCollapsed',
      class: 'pull-right'}
    %span{'ng-show' => 'transfer.isCollapsed'}
      = image_tag 'buttons/arrow_collapsed.svg'
    %span{'ng-show' => '!transfer.isCollapsed'}
      = image_tag 'buttons/arrow_uncollapsed.svg'
  %a{href: 'javascript:void(0);', 'ng-click' => 'remove(day.transfers, $index)', class: 'pull-right'}
    = image_tag 'buttons/delete.svg'

.form-group
  .col-md-4
    = render 'widgets/typeahead/cities', model_name: 'transfer.city_from', classes: 'input-sm form-control',
        placeholder: t('trips.show.from'), allow_empty_typeahead: true
  .col-md-2
    = text_field_tag 'transfer_station_from', '', 'ng-model' => 'transfer.station_from', class: 'input-sm form-control',
          placeholder: t('trips.show.station_from')
  .col-md-4
    = render 'widgets/typeahead/cities', model_name: 'transfer.city_to', classes: 'input-sm form-control',
        placeholder: t('trips.show.to'), allow_empty_typeahead: true
  .col-md-2
    = text_field_tag 'transfer_station_to', '', 'ng-model' => 'transfer.station_to', class: 'input-sm form-control',
          placeholder: t('trips.show.station_to')


%div{'ng-show' => '!transfer.isCollapsed'}
  .form-group
    .col-xs-6
      = render 'widgets/datetimepicker', link_default_text: t('trips.show.departure'), model: 'transfer.start_time'
    .col-xs-6
      = render 'widgets/datetimepicker', link_default_text: t('trips.show.arrival'), model: 'transfer.end_time'

  .form-group
    .col-md-12
      = render 'widgets/price', name: 'transfer_price', object_model: 'transfer', placeholder: t('trips.show.price')

  .form-group
    .col-md-12
      = select_tag 'transfer_type', options_for_select(transfer_type_options),
        {class: 'form-control input-sm', 'ng-model' => 'transfer.type'}

  .form-group
    .col-md-4
      = text_field_tag 'transfer_code', '', 'ng-model' => 'transfer.code', class: 'input-sm form-control',
          placeholder: 'â„–'
    .col-md-8
      = text_field_tag 'transfer_company', '', 'ng-model' => 'transfer.company', class: 'input-sm form-control',
          placeholder: t('trips.show.carrier')

  .form-group
    .col-md-12
      = text_area_tag 'transfer_comment', '', 'ng-model' => 'transfer.comment', class: 'form-control',
          placeholder: t('trips.show.comment'), rows: 3
  .form-group
    .col-md-12
      = label_tag t('trips.show.links')
      %a.link-with-icon.pull-right{href: 'javascript:void(0);', 'ng-click' => "add(transfer.links)"}
        = inline_svg 'buttons/add_plain.svg'
        = t('trips.show.add_link')

  %div{'ng-repeat' => 'link in transfer.links track by link.id'}
    = render 'widgets/link', ng_model_descr: 'link.description', ng_model_url: 'link.url', ng_array: 'transfer.links'



