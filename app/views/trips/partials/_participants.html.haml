.participants{'ng-controller' => 'ParticipantsController', 'ng-init' => 'loadParticipants()', 'ng-cloak' => ''}
  = link_to '/users/{{participant.id}}', 'ng-repeat' => 'participant in participants track by participant.id' do
    %img.img-circle.small-profile-pic.participant{ 'ng-src' => '{{participant.photo_url}}',
      'tooltip-placement' => "bottom", 'tooltip' => '{{participant.name}}'}

  %a{href: 'javascript:void(0)', 'popover-template' => "'invitePopover.html'", 'popover-title' => 'Invite friend',
    'popover-placement' => 'bottom'}
    %img.img-circle.small-profile-pic.add-participant{src: image_path('material/plus.png')}
